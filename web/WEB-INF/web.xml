<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GetMsg</servlet-name>
        <servlet-class>Server.GetMsgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMsg</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddMsg</servlet-name>
        <servlet-class>Server.AddMsgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMsg</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>Server.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>Server.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/sign_in</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateRoomServlet</servlet-name>
        <servlet-class>Server.CreateRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateRoomServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAllUsersServlet</servlet-name>
        <servlet-class>Server.GetAllUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllUsersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Server.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetRoomsServlet</servlet-name>
        <servlet-class>Server.GetRoomsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetRoomsServlet</servlet-name>
        <url-pattern>/rooms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetPrivateMsgServlet</servlet-name>
        <servlet-class>Server.GetPrivateMsgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPrivateMsgServlet</servlet-name>
        <url-pattern>/my_msg</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
